		<dependency>
            <groupId>ThMod</groupId>
            <artifactId>ThMod</artifactId>
            <version>v0.14.17</version>
            <scope>system</scope>
            <systemPath>${basedir}/../lib/TS05_Marisa.jar</systemPath>
        </dependency>
		<dependency>
            <groupId>BlackRuseMods</groupId>
            <artifactId>StS-BlackRuse</artifactId>
            <version>0.9.3</version>
            <scope>system</scope>
            <systemPath>${basedir}/../lib/BlackRuseMod.jar</systemPath>
        </dependency>
		<dependency>
            <groupId>beakedthecultist</groupId>
            <artifactId>BeakedTheCultist</artifactId>
            <version>0.0.1</version>
            <scope>system</scope>
            <systemPath>${basedir}/../lib/BeakedTheCultist.jar</systemPath>
        </dependency>
	    <dependency>
               <groupId>therunesmith</groupId>
               <artifactId>therunesmith</artifactId>
               <version>v.0.3.2</version>
               <scope>system</scope>
               <systemPath>${basedir}/../lib/TheRunesmith.jar</systemPath>
        </dependency>
		<dependency>
               <groupId>ReplayTheSpireMod</groupId>
               <artifactId>ReplayTheSpireMod</artifactId>
               <version>2.10.0</version>
               <scope>system</scope>
               <systemPath>${basedir}/../lib/ReplayTheSpireMod.jar</systemPath>
        </dependency>
		<dependency>
               <groupId>conspire</groupId>
               <artifactId>Conspire</artifactId>
               <version>1.5.5</version>
               <scope>system</scope>
               <systemPath>${basedir}/../lib/Conspire.jar</systemPath>
        </dependency>
		<dependency>
               <groupId>InfiniteSpire</groupId>
               <artifactId>InfiniteSpire</artifactId>
               <version>0.15.1</version>
               <scope>system</scope>
               <systemPath>${basedir}/../lib/InfiniteSpire.jar</systemPath>
